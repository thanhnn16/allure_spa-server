                "tags": [
                    "Treatments"
                ],
                "summary": "Get paginated list of treatments",
                "operationId": "82b9cc01175bdb163ff2526df4107b8b",
                "parameters": [
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number of items per page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
